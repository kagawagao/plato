{
  "name": "PLATO",
  "version": "2.0.0-beta",
  "description": ":heart: a Boilerplate for SPAs use vue, vuex, vue-router",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "dev:mock": "better-npm-run dev -- --mock",
    "debug": "better-npm-run debug",
    "e2e": "better-npm-run e2e",
    "e2e:dev": "better-npm-run e2e:dev",
    "unit": "better-npm-run unit",
    "unit:dev": "better-npm-run unit:dev",
    "lint": "eslint --max-warnings 10 .",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "stylelint src/themes/**/*.css",
    "test": "npm run lint && npm run lint:css && npm run unit && npm run e2e",
    "clean": "better-npm-run clean",
    "compile": "better-npm-run compile",
    "build": "better-npm-run build",
    "docs": "bash .tools/bash/docs.sh",
    "push": "bash .tools/bash/push.sh",
    "init": "CHROMEDRIVER_CDNURL=http://cdn.npm.taobao.org/dist/chromedriver npm install -r https://registry.npm.taobao.org"
  },
  "betterScripts": {
    "compile": {
      "command": "node .tools/bin/compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "start": {
      "command": "nodemon .tools/bin/start",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "dev": {
      "command": "nodemon .tools/bin/start",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "debug": {
      "command": "nodemon --debug .tools/bin/start",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "clean": {
      "command": "node .tools/bin/clean",
      "env": {
        "DEBUG": "koa*"
      }
    },
    "build": {
      "command": "npm run test && npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "koa*"
      }
    },
    "e2e": {
      "command": "node ./test/e2e/runner.js --env firefox",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "koa*"
      }
    },
    "e2e:dev": {
      "command": "nodemon ./test/e2e/runner.js",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "koa*"
      }
    },
    "unit": {
      "command": "karma start ./test/unit/runner.js",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "unit:dev": {
      "command": "karma start ./test/unit/runner.js --watch",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "koa*"
      }
    }
  },
  "dependencies": {
    "leancloud-storage": "^1.5.0",
    "nd-datetime": "^3.0.5",
    "nd-promise": "^3.1.0",
    "plato-i18n": "^2.0.0-beta.3",
    "plato-request": "^0.1.0",
    "plato-validator": "^2.0.0-beta.1",
    "vue": "^2.0.0-rc.7",
    "vue-router": "^2.0.0-rc.5",
    "vuex": "^2.0.0-rc.6",
    "vuex-actions": "^1.1.1",
    "vuex-localstorage": "^0.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "babel-runtime": "^6.11.6",
    "better-npm-run": "0.0.11",
    "bundle-loader": "^0.5.4",
    "chai": "^3.5.0",
    "chromedriver": "^2.24.1",
    "copy-webpack-plugin": "^3.0.1",
    "cross-spawn": "^4.0.2",
    "css-loader": "^0.25.0",
    "debug": "^2.2.0",
    "eslint": "^3.6.0",
    "eslint-config-plato": "^0.0.0",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-es6-shim": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "koa": "^2.0.0",
    "koa-error": "^2.1.0",
    "koa-favicon": "^2.0.0",
    "koa-logger": "^2.0.0",
    "koa-static": "^3.0.0",
    "mocha": "^3.0.2",
    "nightwatch": "^0.9.8",
    "nodemon": "^1.10.2",
    "phantomjs-polyfill": "^0.0.2",
    "phantomjs-prebuilt": "^2.1.12",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-flexible": "^0.1.1",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.13.0",
    "postcss-url": "^5.1.2",
    "rimraf": "^2.5.4",
    "selenium-server": "^2.53.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.2",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^2.0.6",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^9.5.0",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.1",
    "webpack-hot-middleware": "^2.12.2",
    "yargs": "^5.0.0"
  },
  "engines": {
    "node": ">= 5.10.0 <= 5.12.0",
    "npm": ">= 3.6.0 <= 3.8.6"
  }
}
